package loginConfig

import (
    "os"
)

type Config struct {
    Hostname            string  `yaml:"-"`
    CookieName          string  `yaml:"-"`
    SignAlg             string  `yaml:"-"`
    TokenName           string  `yaml:"-"`
    BearerName          string  `yaml:"-"`

    Secret              string  `yaml:"secret"`
    Issuer              string  `yaml:"issuer"`
    Subject             string  `yaml:"subject"`
    Duration            int     `yaml:"duration"`
}

func New() *Config {

    return &Config{
        Hostname:       os.Hostname(),
        CookieName:     "token",
        SignAlg:        "HS512",
        TokenName:      "token",
        BearerName:     "Bearer",

        Secret:         "secret",
        Issuer:         "@app_name@",
        Subject:        "@app_name@",
        Duration:       3600 * 1,
    }
}
